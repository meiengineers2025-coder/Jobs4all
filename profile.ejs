<% layout('layouts/main') %>

<h2 class="text-3xl font-semibold text-gray-800 mb-8">
    My Profile
</h2>

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-xl p-10">

    <% if (message) { %>
        <p class="bg-green-100 text-green-700 text-center py-2 rounded mb-4">
            <%= message %>
        </p>
    <% } %>

    <form action="/candidate/profile" method="POST" class="grid grid-cols-1 gap-6">

        <div>
            <label class="block font-medium mb-1">Full Name</label>
            <input type="text" name="name" value="<%= user.name %>" 
                   class="w-full border px-4 py-2 rounded focus:ring focus:ring-indigo-300 outline-none">
        </div>

        <div>
            <label class="block font-medium mb-1">Email</label>
            <input type="email" name="email" value="<%= user.email %>" disabled
                   class="w-full bg-gray-100 border px-4 py-2 rounded outline-none">
        </div>

        <div>
            <label class="block font-medium mb-1">Mobile (Optional)</label>
            <input type="text" name="mobile"
                   class="w-full border px-4 py-2 rounded focus:ring focus:ring-indigo-300 outline-none">
        </div>

        <div>
            <label class="block font-medium mb-1">Bio (Optional)</label>
            <textarea name="bio" rows="4"
                      class="w-full border px-4 py-2 rounded focus:ring focus:ring-indigo-300 outline-none"
                      placeholder="Tell something about yourself..."></textarea>
        </div>

        <button class="bg-indigo-600 text-white font-semibold py-2 rounded hover:bg-indigo-700 transition">
            Save Changes
        </button>

    </form>

</div>