<% layout('layouts/main') %>

<section style="max-width: 400px; margin: 3rem auto; background: white; padding: 2rem; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
  <h2>Admin Login</h2>

  <% if (message) { %>
    <p style="color:red; margin-top:10px;"><%= message %></p>
  <% } %>

  <form action="/admin/login" method="POST" style="margin-top: 1.5rem;">
    <input type="email" name="email" placeholder="Admin Email" required
      style="width:100%;padding:10px;margin:8px 0;border-radius:8px;border:1px solid #ccc;" />
    <input type="password" name="password" placeholder="Password" required
      style="width:100%;padding:10px;margin:8px 0;border-radius:8px;border:1px solid #ccc;" />
    <button type="submit"
      style="width:100%;padding:10px;background:#e53935;color:white;border:none;border-radius:8px;cursor:pointer;">
      Login
    </button>
  </form>

  <p style="margin-top:1rem;text-align:center;">
    <a href="/">‚Üê Back to Home</a>
  </p>
</section>