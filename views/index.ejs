<% layout('layouts/main') %>

<section style="max-width: 600px; margin: 3rem auto; background: white; padding: 2rem; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
  <h1>Welcome to Jobs Portal ðŸŽ‰</h1>
  <p style="color:#555; margin-top:1rem;">
    Your all-in-one platform for job seekers and employers.  
    Create your account, apply for jobs, and get matched instantly!
  </p>

  <% if (!user) { %>
  <div style="margin-top: 2rem;">
    <a href="/login" class="btn">Login</a>
    <a href="/register" class="btn">Register</a>
  </div>

  <hr style="margin:2rem 0;" />
  <p>Or sign in with:</p>
  <div style="margin-top: 1rem;">
    <a href="/auth/google" style="background:#DB4437;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">Google</a>
    <a href="/auth/facebook" style="background:#1877F2;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">Facebook</a>
    <a href="/auth/linkedin" style="background:#0A66C2;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">LinkedIn</a>
  </div>
  <% } else { %>
  <div style="margin-top:2rem;">
    <p>You're already signed in as <strong><%= user.name %></strong>.</p>
    <a href="/dashboard" class="btn">Go to Dashboard</a>
  </div>
  <% } %>
</section>