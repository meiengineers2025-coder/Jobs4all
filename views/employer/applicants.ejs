<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Applicants | Jobs Portal</title>
    <link rel="stylesheet" href="/css/styles.css">

    <style>
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
            gap: 20px;
        }

        .sidebar {
            width: 220px;
            background: #0d1b2a;
            color: white;
            padding: 25px 15px;
        }

        .sidebar h3 {
            margin-bottom: 25px;
        }

        .sidebar a {
            display: block;
            padding: 12px 10px;
            margin-bottom: 8px;
            border-radius: 4px;
            color: white;
            text-decoration: none;
            transition: 0.2s;
        }

        .sidebar a:hover {
            background: #1b263b;
        }

        .main-content {
            flex: 1;
            padding: 25px;
        }

        .table-card {
            background: white;
            padding: 22px;
            border-radius: 8px;
            box-shadow: rgba(0,0,0,0.08) 0px 4px 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        table th, table td {
            padding: 12px 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background: #e8eef6;
        }

        .match-score {
            padding: 6px 12px;
            border-radius: 6px;
            font-weight: bold;
        }

        .match-good { background: #d4f8e8; color: #066b30; }
        .match-mid { background: #fff4cd; color: #a27700; }
        .match-low { background: #ffe2e2; color: #9b1c1c; }

        .btn-link {
            text-decoration: none;
            color: #005eff;
        }
    </style>
</head>

<body>

<!-- Navbar -->
<%- include("../layouts/main") %>

<div class="dashboard-wrapper">

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Employer Menu</h3>
        <a href="/employer/dashboard">Dashboard</a>
        <a href="/employer/post-job">Post Job</a>
        <a href="/employer/applicants" style="background:#1b263b;">Applicants</a>
        <a href="/employer/profile">Profile</a>
        <a href="/employer/plans">Plans / Subscription</a>
        <a href="/logout">Logout</a>
    </div>

    <!-- Main Page -->
    <div class="main-content">
        <h2>Applicants</h2>

        <div class="table-card">
            <table>
                <thead>
                    <tr>
                        <th>Candidate</th>
                        <th>Job Title</th>
                        <th>Match %</th>
                        <th>Resume</th>
                        <th>Status</th>
                    </tr>
                </thead>

                <tbody>
                <% if (applicants && applicants.length > 0) { %>

                    <% applicants.forEach(app => { %>
                        <tr>
                            <td><%= app.candidateName %></td>
                            <td><%= app.jobTitle %></td>

                            <td>
                                <% let cls = app.matchScore >= 70 ? "match-good"
                                         : app.matchScore >= 40 ? "match-mid"
                                         : "match-low"; %>
                                <span class="match-score <%= cls %>">
                                    <%= app.matchScore %>%
                                </span>
                            </td>

                            <td>
                                <a class="btn-link" href="<%= app.resumePath %>" target="_blank">View Resume</a>
                            </td>

                            <td>
                                <form action="/applications/update-status" method="POST">
                                    <input type="hidden" name="applicationId" value="<%= app.id %>">
                                    <select name="status" onchange="this.form.submit()">
                                        <option <%= app.status==='Pending'?'selected':'' %> >Pending</option>
                                        <option <%= app.status==='Shortlisted'?'selected':'' %> >Shortlisted</option>
                                        <option <%= app.status==='Rejected'?'selected':'' %> >Rejected</option>
                                    </select>
                                </form>
                            </td>
                        </tr>
                    <% }) %>

                <% } else { %>
                    <tr>
                        <td colspan="5" style="text-align:center; padding:15px;">
                            No applicants yet.
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>

</body>
</html>