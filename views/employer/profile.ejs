<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Dashboard | Jobs Portal</title>
    <link rel="stylesheet" href="/css/styles.css">

    <style>
        /* Dashboard Layout Enhancements */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
            gap: 20px;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background: #0d1b2a;
            color: white;
            padding: 25px 15px;
        }
        .sidebar h3 { margin-bottom: 25px; }
        .sidebar a {
            display: block;
            padding: 12px 10px;
            margin-bottom: 8px;
            border-radius: 4px;
            color: white;
            text-decoration: none;
            transition: 0.2s;
        }
        .sidebar a:hover {
            background: #1b263b;
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            padding: 25px;
        }

        /* Stats Boxes */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-bottom: 25px;
        }
        .stat-card {
            padding: 18px;
            background: #fff;
            border-radius: 8px;
            box-shadow: rgba(0,0,0,0.08) 0px 2px 6px;
        }
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 5px;
        }

        /* Profile Progress */
        .progress-container {
            margin-bottom: 18px;
        }
        .progress-bar {
            width: <%= employer.completion || 60 %>%;
            height: 8px;
            background: #0072ff;
            border-radius: 5px;
            transition: width .3s ease;
        }

        /* Form Layout */
        .profile-card {
            background: #ffffff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: rgba(0,0,0,0.06) 0px 6px 12px;
        }

        .logo-preview {
            max-width: 120px;
            margin-top: 6px;
            border-radius: 6px;
        }
    </style>
</head>

<body>

    <%- include("partials/navbar") %>

    <div class="dashboard-wrapper">

        <!-- Sidebar -->
        <div class="sidebar">
            <h3>Employer Menu</h3>
            <a href="/employer/dashboard">Dashboard</a>
            <a href="/job/post">Post a Job</a>
            <a href="/job/manage">Manage Jobs</a>
            <a href="/candidates">Candidates</a>
            <a href="/logout">Logout</a>
        </div>

        <!-- Main Page Content -->
        <div class="main-content">

            <h2>Employer Profile</h2>

            <% if (message) { %>
                <div class="alert"><%= message %></div>
            <% } %>

            <!-- Stats -->
            <div class="stats-grid">
                <div class="stat-card">
                    Jobs Posted
                    <div class="stat-number"><%= employer.jobsPosted || 0 %></div>
                </div>

                <div class="stat-card">
                    Candidates Applied
                    <div class="stat-number"><%= employer.applicants || 0 %></div>
                </div>

                <div class="stat-card">
                    Profile Strength
                    <div class="progress-container">
                        <div class="progress-bar"></div>
                    </div>
                </div>
            </div>

            <!-- Profile Form -->
            <form action="/employer/profile/update" method="POST" enctype="multipart/form-data" class="profile-card">

                <h3>Company Information</h3>
                <br>

                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" name="companyName" value="<%= employer.companyName || '' %>" required>
                </div>

                <div class="form-group">
                    <label>Industry</label>
                    <input type="text" name="industry" value="<%= employer.industry || '' %>">
                </div>

                <div class="form-group">
                    <label>Company Website</label>
                    <input type="url" name="website" value="<%= employer.website || '' %>">
                </div>

                <div class="form-group">
                    <label>Location</label>
                    <input type="text" name="location" value="<%= employer.location || '' %>">
                </div>

                <div class="form-group">
                    <label>Upload Company Logo</label>
                    <input type="file" id="logoUpload" name="logo" accept="image/*">
                </div>

                <% if (employer.logoPath) { %>
                    <img src="<%= employer.logoPath %>" id="logoPreview" class="logo-preview">
                <% } else { %>
                    <img id="logoPreview" class="logo-preview" style="display:none;">
                <% } %>

                <div class="form-group">
                    <label>About Company</label>
                    <textarea name="about" rows="5"><%= employer.about || '' %></textarea>
                </div>

                <button type="submit" class="btn-primary">Save Changes</button>

            </form>

        </div>
    </div>


    <!-- Live image preview -->
    <script>
        document.getElementById("logoUpload").addEventListener("change", function () {
            const reader = new FileReader();
            reader.onload = function (e) {
                const preview = document.getElementById("logoPreview");
                preview.src = e.target.result;
                preview.style.display = "block";
            };
            reader.readAsDataURL(this.files[0]);
        });
    </script>

</body>

</html>
