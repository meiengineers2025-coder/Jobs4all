<% layout('layouts/main') %>

<div class="flex justify-center items-center py-20">

    <div class="w-full max-w-md bg-white shadow-xl rounded-xl p-8">

        <h2 class="text-center text-3xl font-semibold mb-6 text-indigo-600">
            Login
        </h2>

        <% if (message) { %>
            <p class="bg-red-100 text-red-600 text-center py-2 rounded mb-4">
                <%= message %>
            </p>
        <% } %>

        <form action="/login" method="POST" class="flex flex-col gap-4">

            <div>
                <label class="block font-medium mb-1">Email</label>
                <input type="email" name="email" required
                       class="w-full border px-4 py-2 rounded focus:ring focus:ring-indigo-300 outline-none">
            </div>

            <div>
                <label class="block font-medium mb-1">Password</label>
                <input type="password" name="password" required
                       class="w-full border px-4 py-2 rounded focus:ring focus:ring-indigo-300 outline-none">
            </div>

            <button
                class="bg-indigo-600 text-white font-semibold py-2 rounded hover:bg-indigo-700 transition">
                Login
            </button>
        </form>

        <p class="mt-6 text-center text-gray-600">
            Don't have an account?
            <a href="/register" class="text-indigo-600 font-medium hover:underline">
                Sign up
            </a>
        </p>

    </div>

</div>
