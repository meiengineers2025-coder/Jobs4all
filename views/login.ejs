<% layout('layouts/main') %>

<section style="max-width: 400px; margin: 3rem auto; background: white; padding: 2rem; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
  <h2>Login to Your Account</h2>

  <% if (message) { %>
    <p style="color:red; margin-top:10px;"><%= message %></p>
  <% } %>

  <form action="/login" method="POST" style="margin-top: 1.5rem;">
    <input type="email" name="email" placeholder="Email" required
      style="width:100%;padding:10px;margin:8px 0;border-radius:8px;border:1px solid #ccc;" />
    <input type="password" name="password" placeholder="Password" required
      style="width:100%;padding:10px;margin:8px 0;border-radius:8px;border:1px solid #ccc;" />
    <button type="submit"
      style="width:100%;padding:10px;background:#0052cc;color:white;border:none;border-radius:8px;cursor:pointer;">
      Login
    </button>
  </form>

  <p style="margin-top:1rem;">
    <a href="/forgot">Forgot Password?</a>
  </p>

  <hr style="margin:2rem 0;" />

  <p>Or sign in with:</p>
  <div style="margin-top: 1rem;">
    <a href="/auth/google"
      style="background:#DB4437;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">
      Google
    </a>
    <a href="/auth/facebook"
      style="background:#1877F2;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">
      Facebook
    </a>
    <a href="/auth/linkedin"
      style="background:#0A66C2;color:white;padding:10px 20px;border-radius:6px;text-decoration:none;margin:5px;display:inline-block;">
      LinkedIn
    </a>
  </div>

  <p style="margin-top:1.5rem;">
    Donâ€™t have an account? <a href="/register">Register here</a>
  </p>
</section>